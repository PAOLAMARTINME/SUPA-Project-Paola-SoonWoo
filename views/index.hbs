<div class="container">
    <section id="main-page" class="row">

        <article>

            <h1>{{title}}</h1>

            <p>¡Bienvenidos al mejor Supermercado de frutas y verduras!</p>
            <br>
            <a class="btn btn-lg" href="/products/list">Ver productos</a>
        </article>
        <img src="./images/main/basket.png" alt="main-image">


    </section>
    <section class="row">
        <div class="glide gallery">
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">

                    {{#each allThePictures}}

                    <li class="glide__slide">
                        <img src="{{path}}" alt="{{name}}" style="width: 100%">
                    </li>

                    {{/each}}

                </ul>
            </div>
            <div class="glide__arrows" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
                <button class="glide__arrow glide__arrow--right" data-glide-dir=">">next</button>
            </div>
        </div>
    </section>
