<div class="container">
    <a id="admin-btn" href="/admin/admin" role="ADMIN">
        <image
            src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/77/Open_Access_logo_PLoS_transparent.svg/110px-Open_Access_logo_PLoS_transparent.svg.png"
            alt="Acceso Administrador"> Admin
    </a>
    <div class="row">



        <div class="col-md-6">
            <h1 style="font-weight: 100">Nuevo usuario</h1>

            <form action="/admin/newUser" method="post">
                <div class="form-group">
                    <label for="username">Usuario</label>
                    <input name="username" type="text" class="form-control" id="username">
                </div>
                <div class="form-group">
                    <label for="role">Rol</label>
                    <input name="role" type="text" class="form-control" id="role">
                </div>
                <div class="form-group">

                    <label for="password">Contrase√±a</label>
                    <input name="password" type="password" class="form-control" id="password">
                </div>
                <button type="submit" class="btn">Crear usuario</button>
                <a href="/admin/profileList" class="btn">Volver</a>
                {{#if errorMsg}}
                <div id="errorMsg">{{{errorMsg}}}</div>
                {{/if}}
            </form>
        </div>
    </div>
</div>