<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h1>Editar "{{theUser.username}}"</h1>

            <form action="/admin/edit?userId={{theUser._id}}" method="post">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input name="username" type="text" class="form-control" id="username" value="{{theUser.username}}">
                </div>
                <div class="form-group">
                    <label for="role">Role</label>
                    <input name="role" type="text" class="form-control" id="role" value="{{theUser.role}}">
                </div>


                <button type="submit" class="btn btn-dark">Editar</button>
            </form>
        </div>
    </div>
    <a class="btn btn-dark non-radius" href="/admin/profileList">Volver</a>
</div>