<div class="container">
    <a id="admin-btn" href="/admin/admin" role="ADMIN">
        <image
            src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/77/Open_Access_logo_PLoS_transparent.svg/110px-Open_Access_logo_PLoS_transparent.svg.png"
            alt="Acceso Administrador"> Admin
    </a>
    <h1>Galer√≠a</h1>

    <section class="row">
        {{#each allThePictures}}
        <article class="col-3">
            <ul>
                <li>
                    <img src="{{path}}" alt="{{name}}" style="width: 100%">
                </li>
            </ul>
            <a class="btn btn-sm" href="/deleteImage/{{_id}}">Eliminar</a>
        </article>
        {{/each}}
    </section>

    <section>

        <div class="glide carousel">
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">

                    {{#each allThePictures}}

                    <li class="glide__slide">
                        <img src="{{path}}" alt="{{name}}" style="width: 100%">
                    </li>

                    {{/each}}

                </ul>
            </div>
            <div class="glide__arrows" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
                <button class="glide__arrow glide__arrow--right" data-glide-dir=">">next</button>
            </div>
        </div>
    </section>

</div>

<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>